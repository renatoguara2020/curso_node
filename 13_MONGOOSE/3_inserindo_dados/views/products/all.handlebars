      <th scope="col">Descrição:</th>
      <th scope="col">URL Image:</th>
      <th scope="col">Detalhes:</th>
      <th scope="col">Editar:</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th>{{this._id}}</th>
      <td>{{this.product.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img src="{{this.image}}" alt="{{this.name}}"></td>
