    <link href="https://fonts.googleapis.com/css2?family=Akshar:wght@300;400;500&family=Anek+Bangla:wght@200;300;400&family=Anek+Odia:wght@200;300;400;500;600&family=Heebo:wght@100;200;300;400;500&family=Inconsolata:wght@200;300;400;500;600&family=Lato:ital,wght@0,400;0,700;1,400&family=Libre+Bodoni:ital,wght@0,400;0,500;1,400;1,500&family=Montserrat:ital,wght@0,200;0,300;0,400;1,200;1,400&family=Nunito:ital,wght@0,200;0,300;1,200;1,300&family=Open+Sans:wght@300&family=Oswald:wght@200;300;400;500&family=Poppins:ital,wght@0,100;0,200;1,100;1,200&family=Raleway:ital,wght@0,300;0,400;1,300&family=Roboto+Condensed:wght@700&family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;1,100;1,200&family=Roboto:ital,wght@0,100;0,300;0,400;1,100;1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body{

            font-family: 'Raleway', sans-serif;
        }
    </style>
    <title>Document</title>
</head>
<body>
    <table class="table  table-hover">

  <thead>
    <tr>
      <th scope="col">ID:</th>
      <th scope="col">Nome:</th>
      <th scope="col">Ocupação:</th>
      <th scope="col">Email:</th>
      <th scope="col">Idade:</th>
      <th scope="col">NewsLetter:</th>
      <th scope="col">Ações:</th>
      <th scope="col"><i class="bi bi-trash"></i>Deletar</th>
    </tr>
  </thead>
  <tbody>
      {{#each users}}
    <tr>
      <th>{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.occupation}}</td>
      <td>{{this.email}}</td>
      <td>{{this.idade}}</td>
      <td>{{this.newsletter}}</td>
      <td><a href="/users/{{this.id}}">Visualizar</a></td>
      <td><a href="/users/delete/{{this.id}}">Deletar</a></td>
    </tr>
    
  </tbody>
  {{/each}}
</table>

<span>Obs:Campo (NewsLetter) 1 = sim e 0 = False</span>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>